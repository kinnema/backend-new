generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  username     String
  email        String        @unique
  refreshToken String?
  password     String
  LastWatched  LastWatched[]
  favorites    Favorite[]

  @@index([email])
}

model LastWatched {
  id          String   @id @default(uuid())
  name        String
  poster_path String
  season      Int
  episode     Int
  isWatched   Boolean? @default(false)
  tmdbId      Int
  userId      String
  user        User     @relation(onDelete: Cascade, references: [id], fields: [userId])
  atSecond    Int
}

model Favorite {
  id          String   @id @default(uuid())
  name        String
  poster_path String
  tmdbId      Int
  userId      String
  user        User     @relation(onDelete: Cascade, references: [id], fields: [userId])
  createdAt   DateTime @default(now())

  @@unique([userId, tmdbId])
  @@index([userId])
}
